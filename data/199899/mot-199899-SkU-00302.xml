      <pb facs="riksdagen-motions-pdf/data/199899/mot_199899_sk_0302/mot_199899_sk_0302-0001.pdf"/>
      <div xml:id="i-7ZNDyjG6iBS8DMTeKdcwAe" type="motHeader">
        <div xml:id="i-Bqnnmv8aQpd3SeXcxKDn5u" type="motTitle"/>
