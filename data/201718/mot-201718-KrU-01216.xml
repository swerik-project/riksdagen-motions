          <list>
            <item xml:id="i-9CXH91WceEe7nQi3bbX3p9">
              Peter Helander (C)
            </item>
            <item xml:id="i-MuE3dkZWMKJT5PfbWsziVC">
              Anders Åkesson (C)
            </item>
          </list>
        </div>
      </div>
