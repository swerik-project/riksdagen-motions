      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_T_0474/mot_200001_T_0474-0001.pdf"/>
      <div type="motHeader" xml:id="i-EUuYUS1LbodeUeEbQmsGbg">
        <div type="motTitle" xml:id="i-6bzLFSo6wzjpFGaxXtjVZB"/>
        <div type="motSubmissionInfo" xml:id="i-XbB2fWvGpjsx34Nmqex62Y"/>
