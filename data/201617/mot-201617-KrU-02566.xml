          <list>
            <item xml:id="i-8tShur2jcQySBMoRoRpYvz">
              Mikael Jansson (SD)
            </item>
            <item xml:id="i-MTh1xqNXrw8N7PoxHTn7mB">
              Roger Richtoff (SD)
            </item>
