      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_T_0218/mot_200001_T_0218-0001.pdf"/>
      <div type="motHeader" xml:id="i-Npq7fAeyJjyoq2oAsGKUf6">
        <div type="motTitle" xml:id="i-2bMsoaMNmnBR7CFft1ppnP"/>
