      <pb facs="riksdagen-motions-pdf/data/198990/mot_198990_fi_7/mot_198990_fi_7-001-001.pdf"/>
      <div xml:id="i-6jT8acXSBefX4eLN5m9MJw" type="motHeader">
        <div xml:id="i-CVfoCCUPb8yriyK5xCR4cM" type="motTitle"/>
