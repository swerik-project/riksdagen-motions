      <pb facs="riksdagen-motions-pdf/data/199697/mot_199697_SF_0027/mot_199697_SF_0027-0001.pdf"/>
      <div type="motHeader" xml:id="i-D5dd5YmLR2RXY1R2MKW3Xe">
