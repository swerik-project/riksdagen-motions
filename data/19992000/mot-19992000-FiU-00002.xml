      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_Fi_0002/mot_199900_Fi_0002-0001.pdf"/>
      <div xml:id="i-8zPYqtznVLxZbQ5GXA1ka1" type="motHeader">
