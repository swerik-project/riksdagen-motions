      <pb facs="riksdagen-motions-pdf/data/199192/mot_199192_BoU_13/mot_199192_BoU_13-001.pdf"/>
      <div xml:id="i-KmzyHrbzZ6Qs8Fo3bEfDYo" type="motHeader">
        <div xml:id="i-GcJvee5dzYLLcERrSVjMhQ" type="motTitle"/>
