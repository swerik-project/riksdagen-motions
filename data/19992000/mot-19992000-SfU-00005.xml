      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_Sf_0005/mot_199900_Sf_0005-0001.pdf"/>
      <div xml:id="i-WiCCth2eeo9xqTeSmvfZfc" type="motHeader">
        <div xml:id="i-TKi2vEhoYCgHCfJzGTT3TU" type="motTitle"/>
        <div xml:id="i-TBs5De13CsqXnmC1pxyDiv" type="motSubmissionInfo"/>
