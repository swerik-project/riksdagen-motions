          <p xml:id="i-WRGRidSckPdpYEsWhsRDm1">
            Roses
          </p>
          <pb facs="riksdagen-motions-pdf/data/198990/mot_198990_jo_504/mot_198990_jo_504-001-002.pdf"/>
          <pb facs="riksdagen-motions-pdf/data/198990/mot_198990_jo_504/mot_198990_jo_504-001-003.pdf"/>
