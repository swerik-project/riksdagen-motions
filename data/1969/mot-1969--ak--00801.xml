      <fw xml:id="i-SqVY549adWqbDCyxbfsHqn">
        Motioner i Andra kammaren, nr 800—801 år 1969 5
      </fw>
      <div xml:id="i-5c8bS8qZkkqjg11jp8irba" type="motHeader">
        <div xml:id="i-4QEpvEfCP2sQsrndvnyC3i" type="motTitle"/>
