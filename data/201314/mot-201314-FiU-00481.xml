        <div xml:id="i-FhHMQiPDtS1jF6tmsFf4ZP" type="motProposal" subtype="förslag">
          <head xml:id="i-6ALaFRXgUNavKisvcNKc32">
            Förslag till riksdagsbeslut
          </head>
