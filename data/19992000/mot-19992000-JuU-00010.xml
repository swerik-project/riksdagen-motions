      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_Ju_0010/mot_199900_Ju_0010-0001.pdf"/>
      <div xml:id="i-QXYF5P8Sgk9iyUN5j8JH1T" type="motHeader">
        <div xml:id="i-4TPaBiUdi1iixXnBLBtMRj" type="motTitle"/>
