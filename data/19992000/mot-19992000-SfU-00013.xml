      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_Sf_0013/mot_199900_Sf_0013-0001.pdf"/>
      <div xml:id="i-YMsH3DigivgojfoeKwkzzS" type="motHeader">
        <div xml:id="i-6Vz6KL22JsBwswe7ZWw7Vk" type="motTitle"/>
