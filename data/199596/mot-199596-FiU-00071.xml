      <pb facs="riksdagen-motions-pdf/data/199596/mot_199596_FI_0071/mot_199596_FI_0071-001.pdf"/>
      <div type="motHeader" xml:id="i-D5vs1CGzzT3vHNPjXwKyqK">
        <div type="motTitle" xml:id="i-QW8MVjE6Z54jRYmq9qi6W5"/>
