      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_Sk_0709/mot_200001_Sk_0709-0001.pdf"/>
      <div xml:id="i-6Bfd6tXeLKwu46Ngbxurj4" type="motHeader">
