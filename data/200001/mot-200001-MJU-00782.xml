      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_MJ_0782/mot_200001_MJ_0782-0001.pdf"/>
      <div type="motHeader" xml:id="i-A9ms8G1nSwabqN8xzXuJ8P">
        <div type="motTitle" xml:id="i-5WrTa2G2Hw1P4xjUva2wXy"/>
        <div type="motSubmissionInfo" xml:id="i-NanMiLnTwqbJrXixmmQyY3"/>
