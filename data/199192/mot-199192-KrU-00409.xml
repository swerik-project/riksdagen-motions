      <pb facs="riksdagen-motions-pdf/data/199192/mot_199192_KrU_409/mot_199192_KrU_409-001.pdf"/>
      <div xml:id="i-DRedafMZGQ51jFyQbaDXtF" type="motHeader">
        <div xml:id="i-9P2SyLomUfrWM85HSW1785" type="motTitle"/>
        <div xml:id="i-M4aTyy2BATCXXTjChrsXxv" type="motSubmissionInfo"/>
