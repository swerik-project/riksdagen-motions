      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_Sk_0682/mot_200001_Sk_0682-0001.pdf"/>
      <div type="motHeader" xml:id="i-MrHd8atc4rRi8RDLm6UAKN">
        <div type="motTitle" xml:id="i-JaGH3hTmtiMizKJCgzNWUq"/>
