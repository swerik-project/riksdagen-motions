      <pb facs="riksdagen-motions-pdf/data/200102/mot_200102_Ub_0516/mot_200102_Ub_0516-0001.pdf"/>
      <div xml:id="i-JFNc47BHVZNb3gFhBjGDde" type="motHeader">
        <div xml:id="i-SxpE9GQP6gWUeKs3iSQhPy" type="motTitle"/>
