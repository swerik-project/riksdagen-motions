      <pb facs="riksdagen-motions-pdf/data/198889/mot_198889_ju_620/mot_198889_ju_620-001.pdf"/>
      <div xml:id="i-Y9CaVL6S16v8SgZUJyb5tx" type="motHeader">
        <div xml:id="i-X5nEDv7i9vJh4ezSttSzMB" type="motTitle"/>
        <div xml:id="i-8nLHBzqAcFLdYcPo7D5v2K" type="motSubmissionInfo"/>
