      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_Sk_0015/mot_199900_Sk_0015-0001.pdf"/>
      <div xml:id="i-NFcAJFvVhkRRnZSHtzpDZj" type="motHeader">
        <div xml:id="i-CNuJbmdotEyRFjpQXBua1p" type="motTitle"/>
        <div xml:id="i-9P9VF83gmKxdC7NTj5LYMA" type="motSubmissionInfo"/>
