      <pb facs="riksdagen-motions-pdf/data/199900/mot_199900_U_0222/mot_199900_U_0222-0001.pdf"/>
      <div type="motHeader" xml:id="i-GchuXbjFw5oTvG5UycowfH">
        <div type="motTitle" xml:id="i-2VG4N5QMPnacNPwSJtTYyP"/>
        <div type="motSubmissionInfo" xml:id="i-Y2x5UqfBVNiGogDeFBwfsJ"/>
