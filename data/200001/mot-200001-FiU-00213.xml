      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_Fi_0213/mot_200001_Fi_0213-0001.pdf"/>
      <div xml:id="i-UDHVtiQbRsKu4MBkEZwGXt" type="motHeader">
        <div xml:id="i-MUu18xQkEnn3xbcGxdkqNh" type="motTitle"/>
        <div xml:id="i-HR3FHfPfp5iHdk3BDQUuZn" type="motSubmissionInfo"/>
