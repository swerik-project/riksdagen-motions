      <pb facs="riksdagen-motions-pdf/data/200506/mot_200506_Bo_308/mot_200506_Bo_308-0001.pdf"/>
      <div xml:id="i-Y9Fj7EcXR5qqCiGvowoaCM" type="motHeader">
