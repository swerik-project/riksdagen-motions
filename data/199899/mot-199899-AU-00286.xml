      <pb facs="riksdagen-motions-pdf/data/199899/mot_199899_A_0286/mot_199899_A_0286-001.pdf"/>
      <div type="motHeader" xml:id="i-427UfxgQ4gx9TFf57rsJ9w">
        <div type="motTitle" xml:id="i-LkskkJfLAXVNLhH9PFrzh9"/>
        <div type="motSubmissionInfo" xml:id="i-QncwmyaFwajV2AFJVD1BXf"/>
