      <pb facs="riksdagen-motions-pdf/data/198889/mot_198889_so_324/mot_198889_so_324-001.pdf"/>
      <div xml:id="i-V88mGoMfPV7zvi4gZeZgwa" type="motHeader">
        <div xml:id="i-3hvQEQ19EGLHSXSeEHQHxs" type="motTitle"/>
        <div xml:id="i-Q7XG9evUQGuAzXbFMi7L2Q" type="motSubmissionInfo"/>
