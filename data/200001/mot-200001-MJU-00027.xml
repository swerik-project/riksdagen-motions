      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_MJ_0027/mot_200001_MJ_0027-0001.pdf"/>
      <div type="motHeader" xml:id="i-CDSihuAwPP6cmqwGjm6Azy">
        <div type="motTitle" xml:id="i-UubYDr6yZquW5ebdJzuhSS"/>
