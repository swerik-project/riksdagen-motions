      <pb facs="riksdagen-motions-pdf/data/199192/mot_199192_SfU_1/mot_199192_SfU_1-001-001.pdf"/>
      <div xml:id="i-5XZtZqrvoHqHfAEcwoATLB" type="motHeader">
