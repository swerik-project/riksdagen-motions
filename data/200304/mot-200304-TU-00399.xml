      <pb facs="riksdagen-motions-pdf/data/200304/mot_200304_T_0399/mot_200304_T_0399-0001.pdf"/>
      <div xml:id="i-7zmabf955bsexLeNwTma76" type="motHeader">
        <div xml:id="i-DS8HWsNdqsb663XFygaKjp" type="motTitle"/>
