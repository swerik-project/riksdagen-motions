      <pb facs="riksdagen-motions-pdf/data/198889/mot_198889_k_207/mot_198889_k_207-001.pdf"/>
      <div xml:id="i-LYja4nuBhYmueFGRUPYaGD" type="motHeader">
        <div xml:id="i-VgGK94BT4fHRDZCzpetXH7" type="motTitle"/>
        <div xml:id="i-AFbxBLbp86HfqTgGkb1rSp" type="motSubmissionInfo"/>
