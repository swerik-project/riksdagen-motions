          <pb facs="riksdagen-motions-pdf/data/198990/mot_198990_bo_37/mot_198990_bo_37-001.pdf"/>
          <p xml:id="i-Tao55dKpNUnpzwB5DarpP3">
            Motion till riksdagen
          </p>
          <p xml:id="i-VYgtWt69BLjUyQJxNHym1e">
            1989/90:B037
          </p>
          <p xml:id="i-2Z4CdMvJ1yWkKvmwXXbnDc">
