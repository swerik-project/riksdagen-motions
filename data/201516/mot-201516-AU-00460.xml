          <list>
            <item xml:id="i-2zK4TmL13jxc42qshHK3u6">
              Adnan Dibrani (S)
            </item>
            <item xml:id="i-V63JALMvJEu88EGW2D6kcA">
              Mattias Jonsson (S)
            </item>
          </list>
        </div>
      </div>
