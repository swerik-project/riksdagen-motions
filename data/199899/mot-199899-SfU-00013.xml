      <pb facs="riksdagen-motions-pdf/data/199899/mot_199899_Sf_0013/mot_199899_Sf_0013-0001.pdf"/>
      <div xml:id="i-WLYjyrga7Tt6wgy28rfqEe" type="motHeader">
        <div xml:id="i-3vCo2bqJKwJ8TZgLrZvnxK" type="motTitle"/>
        <div xml:id="i-UtHqZceBzLvecG3sdmtJYZ" type="motSubmissionInfo"/>
