      <pb facs="riksdagen-motions-pdf/data/199798/mot_199798_SF_0607/mot_199798_SF_0607-0001.pdf"/>
      <div xml:id="i-Ky9tVH1rVqfsfLMZTq9EYx" type="motHeader">
        <div xml:id="i-G2ckp4Jeye2z6yguf1ha3V" type="motTitle"/>
