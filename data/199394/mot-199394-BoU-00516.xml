      <pb facs="riksdagen-motions-pdf/data/199394/mot_199394_BoU_516/mot_199394_BoU_516-001.pdf"/>
      <div xml:id="i-FZs7Nvr7c6JMT48TH6UCdz" type="motHeader">
        <div xml:id="i-GfAA1Yag8mQwYwLAbwFXkd" type="motTitle"/>
        <div xml:id="i-Jvm72H4UDvzdMthugEmxDm" type="motSubmissionInfo"/>
