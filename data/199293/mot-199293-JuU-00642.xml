          <pb facs="riksdagen-motions-pdf/data/199293/mot_199293_JuU_642/mot_199293_JuU_642-002.pdf"/>
          <p xml:id="i-L2m2saB7K6592pHiCiYHGY">
            Hemställan
          </p>
          <p xml:id="i-HH5aPxovZBZUEiUWL7kgkb">
