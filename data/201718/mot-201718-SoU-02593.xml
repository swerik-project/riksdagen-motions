          <list>
            <item xml:id="i-FmGfPvD4vt5ZZcFEGyUVTa">
              Lotta Olsson (M)
            </item>
            <item xml:id="i-2p3dsqfbpsCpoGqmb8aQ7Z">
              Lotta Finstorp (M)
            </item>
