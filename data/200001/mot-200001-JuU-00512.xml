      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_Ju_0512/mot_200001_Ju_0512-0001.pdf"/>
      <div xml:id="i-8PxyrwhxBxUPGzuZiJ8pnv" type="motHeader">
        <div xml:id="i-5YkYh9AGFxAqs9dAdD1JUR" type="motTitle"/>
