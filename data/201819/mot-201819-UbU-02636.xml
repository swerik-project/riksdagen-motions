        <div type="motProposal" subtype="förslag">
          <head xml:id="i-To3Q9UDN6whWjiSkiqd9LU">
            Förslag till riksdagsbeslut
          </head>
          <list>
            <item sortKey="Yrkande 1" xml:id="i-KoHUeZ49s2565PjWMa1DSb">
              Riksdagen anvisar anslagen för 2019 inom utgiftsområde 15 Studiestöd
              enligt förslaget i tabell 1 i motionen.
            </item>
