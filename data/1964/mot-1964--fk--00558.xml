      <fw xml:id="i-TYGLe2EgVxuvFNZPfmufAf">
        Motioner i Första kammaren, nr 557—558 år 1964
      </fw>
      <div xml:id="i-8gHkajp9LDdjfeJjn4U8sx" type="motHeader">
        <div xml:id="i-Kdg9C2trV4kKu4vJ2ogL6o" type="motTitle"/>
        <div xml:id="i-QALDmHCac6QQSuK3J4RQjQ" type="motSubmissionInfo"/>
