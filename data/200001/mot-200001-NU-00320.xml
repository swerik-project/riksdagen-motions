      <pb facs="riksdagen-motions-pdf/data/200001/mot_200001_N_0320/mot_200001_N_0320-0001.pdf"/>
      <div xml:id="i-77Nj9GQC9MAUSVf8JcFtQo" type="motHeader">
        <div xml:id="i-PaFvs7wtc5s7ecWmzDw7bh" type="motTitle"/>
