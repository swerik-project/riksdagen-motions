      <pb facs="riksdagen-motions-pdf/data/199899/mot_199899_Ub_0241/mot_199899_Ub_0241-0001.pdf"/>
      <div type="motHeader" xml:id="i-QoYxTzFRRMY8dWhHVfyBbp">
        <div type="motTitle" xml:id="i-VG6dsH6VpvPcwaUTxC2GVL"/>
